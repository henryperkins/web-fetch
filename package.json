{
  "name": "web-fetch-mcp",
  "version": "1.0.0",
  "description": "MCP server for safe, high-signal web browsing and content fetching for LLM agents",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "web-fetch-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@aws-sdk/client-s3": "^3.970.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@mozilla/readability": "^0.5.0",
    "fast-xml-parser": "^4.3.0",
    "jsdom": "^24.0.0",
    "pdfjs-dist": "^4.0.0",
    "turndown": "^7.1.2",
    "turndown-plugin-gfm": "^1.0.2",
    "undici": "^6.6.0",
    "yaml": "^2.3.0"
  },
  "optionalDependencies": {
    "playwright": "^1.41.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.0",
    "@types/node": "^20.11.0",
    "@types/turndown": "^5.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "mcp",
    "web-fetch",
    "llm",
    "content-extraction",
    "playwright"
  ],
  "license": "MIT"
}
